<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<context id="DB2Tables" targetRuntime="MyBatis3">
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		<!-- 配置数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/web_luhang" userId="root"
			password="luhang">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

	<!-- 指定javaBean生成的位置 --> 
<!-- 		<javaModelGenerator targetPackage="com.aixs.crud.bean" -->
<!-- 			targetProject=".\src\main\java"> -->
<!-- 			<property name="enableSubPackages" value="true" /> -->
<!-- 			<property name="trimStrings" value="true" /> -->
<!-- 		</javaModelGenerator> -->
		
		<!-- 指定javaBean生成的位置 -->
		<javaModelGenerator targetPackage="luhang.bean"
			targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!--指定sql映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="mapper" targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

	<!-- 指定dao接口生成的位置，mapper接口 --> 
<!-- 		<javaClientGenerator type="XMLMAPPER" -->
<!-- 			targetPackage="com.aixs.crud.dao" targetProject=".\src\main\java"> -->
<!-- 			<property name="enableSubPackages" value="true" /> -->
<!-- 		</javaClientGenerator> -->
				<!-- 指定dao接口生成的位置，mapper接口 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="luhang.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		
		<!-- table指定每个表的生成策略 -->
		<table tableName="web_luhangsystem" domainObjectName="LuhangInfo"		
    enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
    enableSelectByExample="false" selectByExampleQueryId="false" >
    <property name="useActualColumnNames" value="true"/>
    </table>
<!-- 		<table tableName="tbl_dept" domainObjectName="Department"></table> -->
	</context>
</generatorConfiguration>